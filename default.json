{
  "extends": [
    "config:base",
  ],
  "baseBranches": [
    "main",
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [ 
        "patch", "pin", "digest",
      ],
      "automerge": true,
      "automergeType": "branch",
      "schedule": ["0 0 6 * * *"],
    }
  ],
  "dependencyDashboard": true,
  "prConcurrentLimit": 20,
  "rebaseWhen": "behind-base-branch",
  "separateMinorPatch": true,
  "separateMajorMinor": true,
  "separateMultipleMajor": true,
}
