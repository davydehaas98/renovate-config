{
  "extends": [
    "config:base",
  ],
  "baseBranches": [
    "main",
  ],
  "automergeSchedule": [
    "after 3am and before 6am"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [ 
        "patch", "pin", "digest",
      ],
      "automerge": true,
      "automergeType": "branch",
    }
  ],
  "dependencyDashboard": true,
  "prConcurrentLimit": 20,
  "rebaseWhen": "behind-base-branch",
  "separateMinorPatch": true,
  "separateMajorMinor": true,
  "separateMultipleMajor": true,
}
