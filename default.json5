{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",

  "extends": [
    "config:recommended",
    "docker:enableMajor",
    "docker:pinDigests",
    "helpers:pinGitHubActionDigests",
    "mergeConfidence:all-badges",
    "workarounds:bitnamiDockerImageVersioning",
    ":dependencyDashboard",
    ":enableVulnerabilityAlertsWithLabel(security)",
    ":gitSignOff",
    ":labels(dependencies,renovate)",
    ":pinDevDependencies",
    ":prImmediately",
    ":rebaseStalePrs",
    ":reviewer(davydehaas98)",
    ":semanticCommits",
    ":separateMultipleMajorReleases",
    ":timezone(UTC)",
  ],

  "baseBranches": ["develop"],
  "separateMinorPatch": true,
  "separateMajorMinor": true,
  "separateMultipleMajor": true,

  // Commit message
  "commitMessageTopic": "{{depName}}",
  "commitMessageExtra": "from {{currentVersion}} to {{newVersion}}",

  // Limits
  "branchConcurrentLimit": 0,
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0,

  // Others
  "configMigration": true,
  "dependencyDashboardLabels": ["renovate"],
  "dependencyDashboardOSVVulnerabilitySummary": "all",
  "osvVulnerabilityAlerts": true,

  // Package Rules
  "packageRules": [
    "abandonmentThreshold": "1 year"

    // Update types
    {
      "matchUpdateTypes": ["major"],
      "addLabels": ["major"]
    },
    {
      "matchUpdateTypes": ["minor"],
      "addLabels": ["minor"]
    },
    {
      "matchUpdateTypes": ["patch"],
      "addLabels": ["patch"]
    },
    {
      "matchUpdateTypes": ["digest"],
      "addLabels": ["digest"]
    },
    {
      "matchUpdateTypes": ["pin"],
      "addLabels": ["pin"]
    },
    {
      "matchUpdateTypes": ["lockFileMaintenance"],
      "addLabels": ["lockFileMaintenance"]
    },

    // Datasources
    // Docker
    {
      "matchDatasources": ["docker"],
      "addLabels": ["docker"]
    },

    // Helm
    {
      "matchDatasources": ["helm"],
      "addLabels": ["helm"],
      "bumpVersion": "patch"
    },

    // Maven
    {
      "matchDatasources": ["maven"],
      "addLabels": ["maven"]
    },

    // NPM
    {
      "matchDatasources": ["npm"],
      "addLabels": ["npm"],
      "bumpVersion": "patch",
      "abandonmentThreshold": "1 year"
    },
    {
      "matchDatasources": ["npm"],
      "matchPackageNames": ["@types/*"],
      "abandonmentThreshold": null
    },
    {
      "matchDatasources": ["npm"],
      "matchPackageNames": ["lodash"],
      "abandonmentThreshold": "6 years"
    },

    // Terraform
    {
      "matchDatasources": [
        "terraform-module", 
        "terraform-provider"
      ],
      "addLabels": ["terraform"]
    },
  ]
}
